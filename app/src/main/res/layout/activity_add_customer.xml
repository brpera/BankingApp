<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.samplebankapp.my.bankingapp.AddCustomer"
    android:background="#1A2930">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CREATE ACCOUNT"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="30dp">



            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Account ID:"
                    android:id="@+id/txtViewAccID"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentStart="true"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_weight="0.5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account ID:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txtAdminAccID"
                    android:layout_alignTop="@+id/txtViewAccID"
                    android:layout_alignStart="@+id/textView5"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:layout_weight="0.5"/>

            </LinearLayout>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtAdminFirstName"
                android:hint="First Name                                                 *"
                android:textColor="#ffffff"
                android:backgroundTint="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_below="@+id/txtViewAccID"
                android:layout_alignParentStart="true"
                android:layout_marginTop="27dp"
                android:layout_alignParentEnd="true"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz " />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtAdminMidName"
                android:hint="Middle Name"
                android:textColor="#ffffff"
                android:backgroundTint="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtFirstName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz " />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtAdminLastName"
                android:hint="Last Name                                                 *"
                android:textColor="#ffffff"
                android:backgroundTint="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtMidName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz " />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/txtAdminAddress"
                android:lines="2"
                android:hint="Address                                                       *"
                android:textColor="#ffffff"
                android:backgroundTint="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtLastName"
                android:layout_alignParentLeft="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txtAdminContactNo"
                android:hint="Contact Number                                        *"
                android:textColor="#ffffff"
                android:backgroundTint="#ffffff"
                android:textColorHint="#ffffff"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtAddress"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:maxLength="15" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/txtAdminPassword"
                android:hint="Password (Numeric)           *"
                android:textColor="#ffffff"
                android:backgroundTint="#ffffff"
                android:textColorHint="#ffffff"
                android:typeface="sans"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txtContactNo"
                android:layout_alignParentLeft="true"
                android:maxLength="4" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/txtAdminConfirm"
                android:hint="Confirm Password             *"
                android:textColor="#ffffff"
                android:backgroundTint="#ffffff"
                android:textColorHint="#ffffff"
                android:typeface="sans"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txtPassword"
                android:layout_alignParentLeft="true"
                android:maxLength="4" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Initial Deposit: "
                    android:id="@+id/textView11"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_weight="0.5"
                    android:layout_below="@+id/txtPassword" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PHP 200.00"
                    android:id="@+id/textView12Admin"
                    android:textColor="#ffffff"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                    android:layout_gravity="right" />

            </LinearLayout>





            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CREATE"
                android:id="@+id/btnAdminCreate"
                android:onClick="addCust"
                android:backgroundTint="#ffffff"
                android:textColor="#0A1612"
                android:textStyle="bold"
                android:layout_above="@+id/btnAdminCancelEdit"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:id="@+id/btnAdminCancelEdit"
                android:onClick="cancelAddCust"
                android:backgroundTint="#ffffff"
                android:textColor="#0A1612"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>
