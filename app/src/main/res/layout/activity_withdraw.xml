<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.samplebankapp.my.bankingapp.Withdraw"
    android:background="#1A2930">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WITHDRAW"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:typeface="sans"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Remaining Balance:"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PHP 0.00"
        android:id="@+id/txtCurrentBal"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New Balance:"
        android:id="@+id/lblNewBal"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textColor="#ff6961"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PHP 0.00"
        android:id="@+id/txtNewBal"
        android:layout_alignBottom="@+id/lblNewBal"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textColor="#ff6961"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Amount:"
        android:id="@+id/textView10"
        android:layout_below="@+id/lblNewBal"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtAccount"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="0.00"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WITHDRAW"
        android:id="@+id/btnWithdraw"
        android:layout_below="@+id/txtAccount"
        android:layout_marginTop="103dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:textStyle="bold"
        android:onClick="withdrawMoney" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/button2"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:textStyle="bold"
        android:layout_below="@+id/btnWithdraw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="cancelWithdraw" />

</RelativeLayout>
