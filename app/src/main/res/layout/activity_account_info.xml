<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.samplebankapp.my.bankingapp.AccountInfoActivity"
    android:background="#1A2930">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ACCOUNT INFORMATION"
        android:id="@+id/textView13"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="28dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Account Number: "
        android:id="@+id/textView7"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginRight="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name: "
        android:id="@+id/textView8"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginRight="7dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address:"
        android:id="@+id/textView16"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_marginRight="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact Number: "
        android:id="@+id/textView17"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignTop="@+id/txtContactNo"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginRight="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Balance: "
        android:id="@+id/textView18"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_marginRight="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ACCT0000"
        android:id="@+id/txtAccNo"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FIRSTNAME"
        android:id="@+id/txtFname"
        android:textStyle="bold"
        android:layout_below="@+id/txtAccNo"
        android:layout_alignStart="@+id/txtAccNo"
        android:singleLine="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ADDRESS, ADDRESS, ADDRESS, ADDREss"
        android:id="@+id/txtAddress"
        android:textStyle="bold"
        android:layout_below="@+id/txtFname"
        android:layout_alignStart="@+id/txtFname"
        android:nestedScrollingEnabled="false"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CONTACTNO"
        android:id="@+id/txtContactNo"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_below="@+id/txtAddress"
        android:layout_alignStart="@+id/txtAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PHP 0.00"
        android:id="@+id/txtCurBal"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignStart="@+id/txtContactNo"
        android:gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT INFORMATION"
        android:id="@+id/btnEditInfo"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:textStyle="bold"
        android:layout_above="@+id/btnBack"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="editAccount" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/btnBack"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:textStyle="bold"
        android:onClick="backToHome"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
