<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.samplebankapp.my.bankingapp.HomeAdmin"
    android:background="#1A2930">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WELCOME, ADMIN!"
        android:id="@+id/textView14"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAINTENANCE"
        android:id="@+id/btnMaintenance"
        android:onClick="showMaintenance"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:textStyle="bold"
        android:layout_above="@+id/btnTransactions"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTransactions"
        android:text="TRANSACTIONS"
        android:onClick="showTransactions"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:textStyle="bold"
        android:layout_above="@+id/btnLogs"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogs"
        android:text="LOGS"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnTransactions"
        android:onClick="showLogs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogout"
        android:text="LOGOUT"
        android:onClick="showLogout"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:textStyle="bold"
        android:layout_below="@+id/btnLogs"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
