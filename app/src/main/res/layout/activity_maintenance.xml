<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.samplebankapp.my.bankingapp.Maintenance"
    android:background="#1A2930">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MAINTENANCE"
        android:id="@+id/textView14"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD CUSTOMER"
        android:id="@+id/btnAddCust"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/textView14"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:typeface="sans"
        android:textStyle="bold"
        android:onClick="showAddCust" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT CUSTOMER"
        android:id="@+id/btnEditCust"
        android:layout_below="@+id/btnAddCust"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnAddCust"
        android:typeface="sans"
        android:textStyle="bold"
        android:onClick="showSearchToEdit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE CUSTOMER"
        android:id="@+id/btnDeleteCust"
        android:layout_below="@+id/btnEditCust"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnEditCust"
        android:typeface="sans"
        android:textStyle="bold"
        android:onClick="showDelete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUSTOMER LIST"
        android:id="@+id/btnCustList"
        android:layout_below="@+id/btnDeleteCust"
        android:layout_alignStart="@+id/btnDeleteCust"
        android:layout_alignEnd="@+id/btnDeleteCust"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:typeface="sans"
        android:textStyle="bold"
        android:onClick="showCustList" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE INITIAL DEPOSIT"
        android:id="@+id/btnChangeInitDepo"
        android:layout_below="@+id/btnCustList"
        android:layout_alignStart="@+id/btnCustList"
        android:layout_alignEnd="@+id/btnCustList"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:typeface="sans"
        android:textStyle="bold"
        android:onClick="showChangeInit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/btnBack"
        android:layout_below="@+id/btnChangeInitDepo"
        android:layout_alignStart="@+id/btnChangeInitDepo"
        android:layout_alignEnd="@+id/btnChangeInitDepo"
        android:backgroundTint="#ffffff"
        android:textColor="#0A1612"
        android:typeface="sans"
        android:textStyle="bold"
        android:onClick="backToHomeFromMaint" />

</RelativeLayout>
