<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.samplebankapp.my.bankingapp.EditAccountInfo"
    android:background="#1A2930">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="EDIT ACCOUNT INFORMATION"
            android:id="@+id/textView13"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="*First Name:"
            android:id="@+id/textView19"
            android:layout_below="@+id/textView13"
            android:layout_alignParentStart="true"
            android:layout_marginTop="44dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEditFname"
            android:layout_below="@+id/textView19"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Middle Name:"
            android:id="@+id/textView20"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/txtEditFname"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEditMname"
            android:layout_below="@+id/textView20"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="*Last Name:"
            android:id="@+id/textView9"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/txtEditMname"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtEditLname"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="*Address:"
            android:id="@+id/textView21"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/txtEditLname"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEditAddress"
            android:layout_below="@+id/textView21"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="*Contact Number:"
            android:id="@+id/textView22"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/txtEditAddress"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtEditContact"
            android:layout_below="@+id/textView22"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:maxLength="15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Change Password (Optional):"
            android:id="@+id/textView23"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_below="@+id/txtEditContact"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/txtEditPassword"
            android:layout_below="@+id/textView23"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView13"
            android:textColor="#ffffff"
            android:layout_marginBottom="25dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/txtEditPassword">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:id="@+id/btnEditInfo"
                android:layout_above="@+id/btnAdminCancelEdit"
                android:layout_below="@+id/txtEditPassword"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:backgroundTint="#ffffff"
                android:textStyle="bold"
                android:textColor="#0A1612"
                android:onClick="updateInfo" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:id="@+id/btnAdminCancelEdit"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#ffffff"
                android:textStyle="bold"
                android:textColor="#0A1612"
                android:layout_below="@+id/btnEditInfo"
                android:onClick="backToInfo" />


        </LinearLayout>


    </RelativeLayout>


</ScrollView>
